<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="25px"
    android:minHeight="25px">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout8"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout9"
            android:layout_weight="0.9"
            android:background="@drawable/nav_color_select"
            android:weightSum="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_epl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leagueIcon"
                android:layout_weight="0.05"
                android:layout_marginLeft="8dp" />
            <TextView
                android:text="English Premier League (EPL) Standings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leagueName"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_weight="0.95"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/standingUpdate"
            android:hapticFeedbackEnabled="true"
            android:scaleType="centerCrop"
            android:layout_weight="0.1"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:src="@mipmap/ic_update2"
            android:background="@drawable/mockup2_signupbuttonred"
            android:paddingLeft="16dp" />
    </LinearLayout>
    <LinearLayout
